$blue = #61bbef
.list
  padding 0
  list-style none
  color #666
  a
    color #666
    &:hover
      color $blue

.item
  font-size 14px
  padding-left 10px
  transition .3s
  border-radius 3px
  display block
  height 50px
  line-height @height
  &:hover
    background-color #f2f2f2

.line
.dot
  .item
    padding-left 30px
    position relative
    &:hover:before
      background-color $blue
    &:before
      content ''
      transition .3s
      display block
      position absolute
      top 23px
      left 12px
      width 5px
      height @width
      border-radius 50%
      background-color #ddd
.line
  .item
    &:before
      z-index 999
      width 8px
      top 21px
      height @width
    &:after
      content ''
      position absolute
      width 2px
      height 100%
      background-color #ddd
      left 15px